<Application x:Class="TheHarbour.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TheHarbour"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="ListViewWindow" TargetType="ListView">
            <Setter Property="Height" Value="195"/>
            <Setter Property="Width" Value="auto"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style x:Key="ListFormat" TargetType="GridViewColumnHeader">
            <Setter Property="Width" Value="100"/>
        </Style>
    </Application.Resources>
</Application>
